// Generators -------------------- //
page_element()
	display: block
	width: 100%

module(size = 2)
	width: grid_width(size) * 10px
	margin: 10px
	text-align: left
	overflow: hidden
	background: white
	border-radius: 5px
	background: rgba(230, 230, 230, 0.25)

button(size = normal, color = charcoal)
	display: inline-block
	cursor: pointer

	if color is charcoal
		color: gray_dark
		background: charcoal_light

		&:hover
			background: gray_dark
			color: black

	if color is charcoal_line
		color: gray_dark
		background: charcoal_dark
		border: 1px solid charcoal_light_border

	if color is white
		color: gray_dark
		background: white
		border: 1px solid white_border

	if color is gray
		background: gray_light
		//border: 1px solid gray_dark

	if color is blue
		color: white
		background: light_blue

	if size is normal
		margin: 30px
		height: 16px
		padding: 12px 30px
		sans(grande, light)

	if size is big
		margin: 30px
		height: 16px
		padding: 17px 30px
		sans(venti, dark)
		line-height: 14px
		font-weight: 600

	if size is small
		margin: 2em
		height: 4px
		padding: 12px 30px
		sans(tall, dark)
		line-height: 05px

	if size is tiny
		margin: 0.5em
		height: 19px
		sans(short, dark)
		line-height: 19px

	border-radius: 100px

input
	display: inline-block
	height: 18px
	margin-top: 12px
	padding: 8px 20px
	float: left
	sans(grande, light)
	line-height: 18px
	text-align: center
	color: white
	resize: none
	border-radius: 5px
	border: none
	background: charcoal_light

	&[placeholder]:empty:before
