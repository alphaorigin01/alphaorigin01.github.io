dark_scroll()
	&::-webkit-scrollbar
		width: 7.5px

	&::-webkit-scrollbar-track
		background: charcoal_dark_border

	&::-webkit-scrollbar-thumb
		background: charcoal_light_border
		border-radius: 10px

no_select()
